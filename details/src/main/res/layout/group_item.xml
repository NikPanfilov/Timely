<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/groupImageView"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="5dp"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		app:layout_constraintBottom_toBottomOf="@+id/groupNameTextView"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/groupNameTextView"
		app:srcCompat="@drawable/group" />

	<TextView
		android:id="@+id/groupNameTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="7dp"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="7dp"
		android:paddingHorizontal="7dp"
		android:paddingVertical="3dp"
		android:text="972103"
		android:textColor="@color/green_secondary"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/groupImageView"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>